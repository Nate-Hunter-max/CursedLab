<Window x:Class="Lab13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab13"
        mc:Ignorable="d"
        Title="Программа, которая зачем-то удаляет файлы" Height="525" Width="800" Background="#FF282C34" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <Button x:Name="Choose_folder" Content="Выбрать папку" Margin="20,50,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="213" Height="57" Background="#FF353A44" Foreground="White" BorderThickness="0,0,0,0" Grid.ColumnSpan="1"/>
        <TextBox x:Name="OutputView" Margin="0,10,10,10" TextWrapping="Wrap" Text="Выберите папку" Foreground="White" BorderThickness="0,0,0,0" IsReadOnly="True" SelectionOpacity="0" Cursor="Arrow" Padding="5,5,5,5" HorizontalAlignment="Right" Width="481" VerticalScrollBarVisibility="Hidden">
            <TextBox.Background>
                <SolidColorBrush Color="#FF1D1F23" Opacity="0.5"/>
            </TextBox.Background>
        </TextBox>
    </Grid>

</Window>
